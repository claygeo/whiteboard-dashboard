{
    "name": "whiteboard-project-frontend",
    "version": "1.0.0",
    "description": "Frontend for the Whiteboard Project using React and Electron",
    "author": "TG",
    "main": "public/electron.js",
    "homepage": "./",
    "scripts": {
        "start": "craco start",
        "build": "craco build",
        "test": "craco test",
        "eject": "react-scripts eject",
        "start:electron": "concurrently \"craco start\" \"wait-on http://localhost:3000 && electron .\"",
        "electron:build": "craco build && electron-builder --debug"
    },
    "dependencies": {
        "@csstools/normalize.css": "^12.0.0",
        "@supabase/supabase-js": "^2.0.0",
        "concurrently": "^8.0.0",
        "electron-is-dev": "^2.0.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router-dom": "^6.0.0",
        "react-scripts": "^5.0.1",
        "sanitize.css": "^13.0.0",
        "wait-on": "^7.0.0"
    },
    "devDependencies": {
        "@craco/craco": "^7.1.0",
        "electron": "^25.0.0",
        "electron-builder": "^24.0.0"
    },
    "build": {
        "appId": "com.example.whiteboard",
        "productName": "Whiteboard Project",
        "files": [
            "build/**/*",
            "public/electron.js",
            "!src/**/*"
        ],
        "directories": {
            "buildResources": "assets"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}